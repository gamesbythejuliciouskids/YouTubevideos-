# YouTube Shorts Automation - Environment Configuration
# Copy this file to .env and fill in your actual API keys

# ===========================================
# AI APIs (Required for Script Generation)
# ===========================================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===========================================
# YouTube API (Required for Upload)
# ===========================================
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
YOUTUBE_CHANNEL_ID=your_youtube_channel_id_here

# ===========================================
# Voice Generation APIs
# ===========================================
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
# Google TTS is used as fallback (no key needed)

# ===========================================
# Content Sources (For Trending Topics)
# ===========================================
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=YouTube-Shorts-Bot/1.0

# Twitter/X API (Optional)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# ===========================================
# Media APIs (For Visuals)
# ===========================================
PEXELS_API_KEY=your_pexels_api_key_here
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here
REPLICATE_API_TOKEN=your_replicate_api_token_here

# ===========================================
# Application Settings
# ===========================================
DEBUG=false
UPLOAD_SCHEDULE_TIME=08:00
TIMEZONE=America/New_York
MAX_DAILY_UPLOADS=1
VIDEO_DURATION_SECONDS=60
SCRIPT_MAX_WORDS=75

# ===========================================
# File Paths
# ===========================================
OUTPUT_DIR=./output
CONFIG_DIR=./config
LOGS_DIR=./logs

# ===========================================
# Database (Optional)
# ===========================================
DATABASE_URL=sqlite:///./youtube_shorts.db

# ===========================================
# Channel Configuration
# ===========================================
CHANNEL_NAME=default
CONTENT_TYPES=educational,technology,science
UPLOAD_FREQUENCY=daily
TARGET_AUDIENCE=general

# ===========================================
# Voice Settings
# ===========================================
DEFAULT_VOICE_ID=default
VOICE_STABILITY=0.5
VOICE_SIMILARITY_BOOST=0.5
VOICE_SPEED=1.0

# ===========================================
# SEO Settings
# ===========================================
TARGET_KEYWORDS_COUNT=10
HASHTAGS_COUNT=5
DESCRIPTION_LENGTH=500

# ===========================================
# Content Quality Settings
# ===========================================
MIN_ENGAGEMENT_SCORE=10.0
MAX_TITLE_LENGTH=100
MIN_TITLE_LENGTH=10

# ===========================================
# Rate Limiting
# ===========================================
API_REQUEST_DELAY=1.0
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY=2.0

# ===========================================
# Production Settings
# ===========================================
ENVIRONMENT=development
LOG_LEVEL=INFO
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=300